<% content_for(:content) do%>
	<%= stylesheet_link_tag "user_show"%>
	<div class="row">
		<div class="col-lg-12">
			<div class="row">
				<div class="col-lg-2">
					<!--img src="http://placehold.it/160x160" class="img-thumbnail" alt="profile_photo"-->
					<%= image_tag @user.gravatar_url,class:"img-thumbnail",alt:"profile_photo"%>
				</div>
				<div class="col-lg-10">
					<h2><%= @user.name%></h2>
					<p><%= @user.email%></p>
					<div class="btn-group" role="group" aria-label="Basic example">
						<%= link_to "Konular",user_path(@user,sayfa:"konular"),class:"btn btn-secondary text-dark"%>
						<%= link_to "Yorumlar",user_path(@user,sayfa:"yorumlar"),class:"btn btn-secondary text-dark"%>
						<%= link_to "Profilimi Düzenle",edit_profile_path(@user),class:"btn btn-secondary text-dark"%>
						<%= link_to "Hesabımı sil",@user,class:"btn btn-danger text-dark",data:{confirm:"Emin misiniz bu işlem geri alınamaz!"},method: :delete%>
					</div>
				</div>
			</div>
		</div>
	</div><hr/>
	<div class="row">
		<div class="col-lg-12">
			<%= yield(:profile_content)%>
		</div>
	</div>
<%end%>

<%= render template:"layouts/application"%>