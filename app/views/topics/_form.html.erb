<% form_url = params[:action] == "new" ? forum_topic_path : @topic%>
<%= form_for @topic,url:form_url do |form|%>
	<% if @topic.errors.any?%>
		<div class="row">
			<div class="col-lg-12 bg-danger">
				<% @topic.errors.full_messages.each do |error|%>
					<ul>
						<li><%= error%></li>
					</ul>
				<%end%>
			</div>
		</div>
	<%end%>
	<div class="row">
		<div class="col-lg-1"></div>
		<div class="col-lg-10 border bg-dark kutu">
			<div class="row">
				<div class="mb-4">
					<%= form.text_field :title,class:"form-control",placeholder:"Başlık"%>
				</div>
				<div class="mb-4">
					<%= form.text_area :body,class:"form-control text_area",placeholder:"Konu içeriği"%>
				</div>
				<%= form.submit "Konu oluştur",class:"btn btn-primary button float-right"%>
			</div>
		</div>
		<div class="col-lg-1"></div>
	</div>
<%end%>